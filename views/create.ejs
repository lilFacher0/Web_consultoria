<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="https://bootswatch.com/5/sandstone/bootstrap.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
    <title>Sistema de consultoria</title>
</head>
 <body>
    
    <!-- MENU PRINCIPAL -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="http://localhost:3000">Sistema consultoria</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav me-auto">
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Usuarios</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Solicitudes</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Dashboard</a>
              </li>
          </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header">Nuevo registro</div>
            <div class="card-body">
                <form action="/save" method="POST">

                  <!-- NOMBRE USUARIO -->
                    <div class="mb-3">
                    <label for="user" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="user" name="user" tabindex="1">
                    </div>

                    <!-- APELLIDO USUARIO -->
                    <div class="mb-3">
                      <label for="user" class="form-label">Apellido</label>
                      <input type="text" class="form-control" id="apellido" name="apellido" tabindex="2">
                    </div>
                    
                    <!-- CORREO USUARIO -->
                    <div class="mb-3">
                      <label for="user" class="form-label">Correo electronico</label>
                      <input type="text" class="form-control" id="correo" name="correo" tabindex="3">
                    </div>

                    <!-- DIRECCION USUARIO -->
                    <div class="mb-3">
                      <label for="user" class="form-label">Direccion</label>
                      <input type="text" class="form-control" id="direccion" name="direccion" tabindex="4">
                    </div>

                    <!-- RUT USUARIO -->
                    <div class="mb-3">
                      <label for="user" class="form-label">Rut</label>
                      <input type="text" class="form-control" id="rut" name="rut" tabindex="5">
                    </div>

                    <!-- DIGITO VERIFICADOR -->
                    <div class="mb-3">
                      <label for="user" class="form-label">Digito verificador</label>
                      <input type="text" class="form-control" id="dv_verificador" name="dv_verificador" tabindex="6">
                    </div>

                    <!-- TELEFONO USUARIO -->
                    <div class="mb-3">
                      <label for="user" class="form-label">Telefono</label>
                      <input type="text" class="form-control" id="fono" name="fono" tabindex="7">
                    </div>

                    <!-- ROL USUARIO -->
                    <div class="mb-3">
                    <label for="user" class="form-label">Rol</label>
                    <select id="rol" name="rol" class="form-select" tabindex="8">
                        <option value="admin" selected>Admin</option>
                        <option value="profesor" selected>Profesor</option>
                        <option value="alumno" selected>Alumno</option>
                    </select>
                    </div>

                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>

            </div>

            </div>

        </div>

    </div>
   

    
    
 </body>
</html>