<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="https://bootswatch.com/5/sandstone/bootstrap.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
    <title>Sistema de consultoria</title>
</head>
 <body>
    

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="http://localhost:3000">Sistema consultoria</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav me-auto">
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Usuarios</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Solicitudes</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Dashboard</a>
              </li>
          </div>
        </div>
    </nav>

    <div class ="container">
        <a href="/create" class="btn btn-outline-primary mt-4"><i class='bx bxs-message-square-add bx-md'></i></a>
        <table class="table table-bordered table-striped text-center mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">Rut</th>
                    <th scope="col">Digito verificador</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Rol</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((usuario)=>{ %>
                <tr>
                    <td><%= usuario.id_usuario %></td>
                    <td><%= usuario.nombre_usuario %></td>
                    <td><%= usuario.apellido_usuario %></td>
                    <td><%= usuario.correo_usuario %></td>
                    <td><%= usuario.direccion_usuario %></td>
                    <td><%= usuario.rut_usuario %></td>
                    <td><%= usuario.dv_usuario %></td>
                    <td><%= usuario.telefono_usuario %></td>
                    <td><%= usuario.rol %></td>
                    <td>
                        <a href="/edit/ <%= usuario.id_usuario %>" class="btn btn-outline-info"><i class='bx bxs-edit bx-md' ></i></a>
                        <a href="/delete/ <%= usuario.id_usuario %>" class="btn btn-outline-danger"><i class='bx bxs-message-square-x bx-md' ></i></a>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>

    
    
 </body>
</html>